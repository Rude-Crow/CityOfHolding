<PlanesScreen>:
    orientation: 'vertical'
    plane_name_input: plane_name_input
    description_input: description_input

    BoxLayout:
        size_hint_y: None
        height: "40dp"
        TextInput:
            id: plane_name_input
            hint_text: "Plane Name"
        TextInput:
            id: description_input
            hint_text: "Description"
        Button:
            text: "Add Plane"
            on_press: root.add_plane()

    ScrollView:
        GridLayout:
            id: plane_list
            cols: 1
            size_hint_y: None
            height: self.minimum_height
